<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Car Icon -->
        <ImageView
            android:id="@+id/iv_car_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_notes_24"
            android:tint="#D32F2F"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- License Plate -->
        <TextView
            android:id="@+id/tv_placa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="GBC-2134"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/iv_car_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Vehicle Model -->
        <TextView
            android:id="@+id/tv_modelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Honda Civic"
            android:textColor="#D32F2F"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/iv_car_icon"
            app:layout_constraintTop_toBottomOf="@id/tv_placa" />

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/action_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/btn_edit_veiculo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_edit_background"
                android:padding="6dp"
                android:src="@drawable/baseline_notes_24"
                android:tint="@android:color/white"
                android:contentDescription="Editar veículo" />

            <ImageView
                android:id="@+id/btn_delete_veiculo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/button_delete_background"
                android:padding="6dp"
                android:src="@drawable/baseline_notes_24"
                android:tint="@android:color/white"
                android:contentDescription="Excluir veículo" />

        </LinearLayout>

        <!-- Year and Color Row -->
        <LinearLayout
            android:id="@+id/year_color_row"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_modelo">

            <TextView
                android:id="@+id/tv_ano"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ano: 2024"
                android:textColor="#666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_cor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cor: Preto"
                android:textColor="#666"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Owner -->
        <TextView
            android:id="@+id/tv_proprietario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Proprietário: Maria Marta"
            android:textColor="#666"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/year_color_row" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>