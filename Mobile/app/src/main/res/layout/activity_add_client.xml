<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".ui.theme.features.cliente.AddClienteActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Novo Cliente"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Campo Nome (Obrigatório) -->
        <EditText
            android:id="@+id/et_client_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome Completo *"
            android:inputType="textPersonName" />

        <!-- Campo CPF/CNPJ (Obrigatório) -->
        <EditText
            android:id="@+id/et_client_cpf_cnpj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="CPF ou CNPJ *"
            android:inputType="number" />

        <!-- Campo Email (Opcional) -->
        <EditText
            android:id="@+id/et_client_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <!-- Campo Telefone (Opcional) -->
        <EditText
            android:id="@+id/et_client_telefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Telefone"
            android:inputType="phone" />

        <!-- Campo Endereço (Opcional) -->
        <EditText
            android:id="@+id/et_client_endereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Endereço"
            android:inputType="textPostalAddress" />

        <Button
            android:id="@+id/btn_save_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Salvar Cliente" />

    </LinearLayout>
</ScrollView>